<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="@dimen/_10sdp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:padding="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/donarImage"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:background="@drawable/oval"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            app:riv_oval="true" />
        <TextView
            android:id="@+id/blood_group"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A+"
            android:textColor="@color/main_gray"
            android:layout_toRightOf="@id/donarImage"
            android:layout_below="@id/donar_name"
            android:textSize="@dimen/_14ssp"
            android:fontFamily="@font/heebo_medium"
            />

        <TextView
            android:id="@+id/donar_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_toRightOf="@id/donarImage"
            android:fontFamily="@font/heebo_medium"

            android:text="David Liam"
            android:textColor="@color/black"
            android:textSize="@dimen/_16ssp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/donarChat"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/oval_chat"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/chat" />




    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>