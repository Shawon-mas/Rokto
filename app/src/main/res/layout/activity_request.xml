    <com.google.android.material.tabs.TabLayout
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/tabLayout"
        app:tabMode="fixed"

        app:tabGravity="fill"
        app:tabTextColor="#000000"
        app:tabIndicatorGravity="stretch"
        app:tabSelectedTextColor="@color/main"
        app:tabIndicatorAnimationMode="elastic"
        app:tabIndicatorColor="#F4B4B4"
        app:tabIndicator="@drawable/tab_indicator"/>
    <androidx.viewpager2.widget.ViewPager2
        android:layout_below="@id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNav_request"
        android:id="@+id/viewPager2"/>

    <com.etebarian.meowbottomnavigation.MeowBottomNavigation
        android:id="@+id/bottomNav_request"
        app:mbn_backgroundBottomColor="@color/main_gray"
        app:mbn_countBackgroundColor="#ff6f00"
        app:mbn_circleColor="@color/main"
        app:mbn_countTextColor="#ffffff"
        app:mbn_defaultIconColor="#FFFFFF"
        app:mbn_rippleColor="#2f424242"
        app:mbn_selectedIconColor="@color/white"
        app:mbn_shadowColor="#1f212121"
        android:layout_alignParentBottom="true"
