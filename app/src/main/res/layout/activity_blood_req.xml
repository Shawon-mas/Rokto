<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.bottomViewActivites.BloodReqActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textColor="@color/main_black"
                android:textSize="@dimen/_20ssp"
                android:fontFamily="@font/heebo_bold"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="Request For Blood"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <Spinner
                android:layout_gravity="start"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:id="@+id/reqBloodType"
                android:textSize="@dimen/_15ssp"
                android:textColor="#000000"
                android:background="@drawable/inuput_bg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:entries="@array/donateBlood_type"/>
            <Spinner
                android:layout_gravity="start"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:id="@+id/reqBloodBag"
                android:textSize="@dimen/_15ssp"
                android:textColor="#000000"
                android:background="@drawable/inuput_bg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:entries="@array/blood_quantity"/>
            <LinearLayout
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:weightSum="2"

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/req_date"
                    android:drawableTint="@color/black"
                    android:drawableRight="@drawable/calender"
                    android:textSize="@dimen/_13ssp"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/heebo_regular"
                    android:paddingStart="@dimen/_16sdp"
                    android:paddingEnd="@dimen/_16sdp"
                    android:background="@drawable/inuput_bg"
                    android:hint="Date"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_46sdp"
                    />
                <TextView

                    android:id="@+id/req_time"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:drawableTint="@color/black"
                    android:drawableRight="@drawable/time"
                    android:textSize="@dimen/_13ssp"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/heebo_regular"
                    android:paddingStart="@dimen/_16sdp"
                    android:paddingEnd="@dimen/_16sdp"
                    android:background="@drawable/inuput_bg"
                    android:hint="Time"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_46sdp"
                    />
            </LinearLayout>
            <EditText
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:gravity="center_vertical"
                android:id="@+id/req_upazila"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45ssp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/inuput_bg"
                android:fontFamily="@font/heebo_regular"
                android:hint="Which Upazila needs blood ?"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:paddingStart="@dimen/_16sdp"
                android:paddingEnd="@dimen/_16sdp"
                android:textColor="#000"
                android:textSize="@dimen/_13ssp" />
            <EditText
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:gravity="center_vertical"
                android:id="@+id/req_number"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45ssp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/inuput_bg"
                android:fontFamily="@font/heebo_regular"
                android:hint="Enter your phone number"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLines="1"
                android:paddingStart="@dimen/_16sdp"
                android:paddingEnd="@dimen/_16sdp"
                android:textColor="#000"
                android:textSize="@dimen/_13ssp" />
            <EditText
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:gravity="center_vertical"
                android:id="@+id/req_location"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45ssp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/inuput_bg"
                android:fontFamily="@font/heebo_regular"
                android:hint="Enter your current location"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:paddingStart="@dimen/_16sdp"
                android:paddingEnd="@dimen/_16sdp"
                android:textColor="#000"
                android:textSize="@dimen/_13ssp" />
            <Spinner
                android:layout_gravity="start"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:id="@+id/bloodneeds_gender"
                android:textSize="@dimen/_15ssp"
                android:textColor="#000000"
                android:background="@drawable/inuput_bg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:entries="@array/blood_gender"/>
            <Spinner
                android:layout_gravity="start"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:id="@+id/patient_type"
                android:textSize="@dimen/_15ssp"
                android:textColor="#000000"
                android:background="@drawable/inuput_bg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:entries="@array/patient"/>
            <EditText
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:gravity="center_vertical"
                android:id="@+id/gift"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45ssp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/inuput_bg"
                android:fontFamily="@font/heebo_regular"
                android:hint="If you want enter gift amount (à§³)"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:maxLines="1"
                android:paddingStart="@dimen/_16sdp"
                android:paddingEnd="@dimen/_16sdp"
                android:textColor="#000"
                android:textSize="@dimen/_13ssp" />
            <EditText
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:gravity="center_vertical"
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100ssp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/inuput_bg"
                android:fontFamily="@font/heebo_regular"
                android:hint="Description"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:paddingStart="@dimen/_16sdp"
                android:paddingEnd="@dimen/_16sdp"
                android:textColor="#000"
                android:textSize="@dimen/_13ssp" />
            <com.google.android.material.button.MaterialButton
                android:layout_marginBottom="@dimen/_50sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:id="@+id/requestMake_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:backgroundTint="@color/main"
                android:text="Make Request"
                android:textColor="@color/white"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold"
                app:cornerRadius="@dimen/_10sdp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


    <com.etebarian.meowbottomnavigation.MeowBottomNavigation
        android:id="@+id/bottomNav_bloodReq"
        app:mbn_backgroundBottomColor="@color/main_gray"
        app:mbn_countBackgroundColor="#ff6f00"
        app:mbn_circleColor="@color/main"
        app:mbn_countTextColor="#ffffff"
        app:mbn_defaultIconColor="#FFFFFF"
        app:mbn_rippleColor="#2f424242"
        app:mbn_selectedIconColor="@color/white"
        app:mbn_shadowColor="#1f212121"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>